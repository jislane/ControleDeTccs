@model SistemaDeControleDeTCCs.Models.Curso

@{
    ViewData["Title"] = "Curso";
}

<!---->
@section Styles {
    <link rel="stylesheet" href="~/css/style-form-group.css" />
}

<partial name="_HeaderPartial" />

<h3>Registrar um novo curso</h3>
<div class="row" id="fundo">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control input" placeholder="Digite o nome do curso" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Sigla" class="control-label"></label>
                    <input asp-for="Sigla" class="form-control input" placeholder="Digite a sigla do curso" />
                    <span asp-validation-for="Sigla" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="CodEmec" class="control-label"></label>
                    <input asp-for="CodEmec" class="form-control input" placeholder="Digite o código do curso no MEC" />
                    <span asp-validation-for="CodEmec" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="IdCampus" class="control-label"></label>
                    <select asp-for="IdCampus" class="form-control input" asp-items="ViewBag.IdCampus">
                        <option value="">Selecione o campus</option>
                    </select>
                </div>
            </div>
            <!-- <div class="form-group">
                <label asp-for="IdCoordenador" class="control-label"></label>
                <select asp-for="IdCoordenador" class ="form-control" asp-items="ViewBag.IdCoordenador"></select>
            </div> -->
            
            <div class="form-row">
                <div class="form-group col-md-6">
                    <button id="btsalvar" type="submit" class="btn-form"><i class="fa fa-floppy-o" aria-hidden="true"></i> Salvar</button>
                </div>
                <div class="form-group col-md-6">
                    <a id="avoltar" asp-action="Index" class="btn btn-form"><i class="fa fa-reply" aria-hidden="true"></i> Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>
