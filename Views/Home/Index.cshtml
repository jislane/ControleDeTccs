@model SistemaDeControleDeTCCs.Areas.Identity.Pages.Account.LoginModel
@inject Microsoft.AspNetCore.Identity.SignInManager<SistemaDeControleDeTCCs.Models.Usuario> SignInManager

@{
    ViewData["Title"] = "Início";
}

@section Styles {
    <link rel="stylesheet" href="~/css/style-login.css" />
}

<div class="main-login">
    <aside class="left">
        <div class="banner">
            <figure>
                <img src="~/img/ifs-logo.png" />
            </figure>
        </div>
    </aside>
    <aside class="right">
        <div class="area-form">
            <div class="header-form">
                <div class="text-center">
                    <img src="~/img/ifs-logo-marca.png" width=125>
                </div>
            </div>
            <div class="form-container">
                <!--
                <form class="form">
                    <input class="input" type="email" placeholder="E-mail" />
                    <input class="input" type="password" placeholder="Senha" />
                </form>
                -->
                <form id="account" class="form" method="post">
                    <input asp-for="Input.Email" class="input" type="email" placeholder="E-mail" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                    <input asp-for="Input.Password" class="input" type="password" placeholder="Senha" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <button type="submit" class="btn-form">SIGN IN</button>
                </form>
            </div>
            <div class="footer-form">
                <footer>
                    <a class="link-form-tcc" href="/TCCPublicados">Sistemas de Controle de TCCs</a>
                    <!--
                    <div class="container" style="margin-top: 5%;display: flex;justify-content: space-between;flex-direction: column;">
                        <button class="btn btn-brand" style="background-color: green;">
                            <a class="nav-link" style="color:white;padding: 0rem 1rem;" asp-area="" asp-controller="TCCPublicados" asp-action="Index"><b>TCCs</b></a>
                        </button>
                    </div>-->
                </footer>
            </div>
        </div>
    </aside>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    <partial name="_ValidationScriptsPartial" />
}