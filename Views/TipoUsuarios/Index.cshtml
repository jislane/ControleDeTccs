@model IEnumerable<SistemaDeControleDeTCCs.Models.TipoUsuario>

@{
    ViewData["Title"] = "TCC";
}

<partial name="_HeaderPartial" />

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DescTipo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DescTipo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TipoUsuarioId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TipoUsuarioId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TipoUsuarioId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
