@model SistemaDeControleDeTCCs.Models.ViewModels.TccViewModel

@{
    ViewData["Title"] = "Usuários";
}
<h1>Cadastrar/Editar TCC</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddOrEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Tcc.TccId" />
            <input type="hidden" asp-for="Tcc.DataDeCadastro" />
            <div class="form-group">
                <label asp-for="Tcc.Tema" class="control-label"></label>
                <input asp-for="Tcc.Tema" class="form-control" />
                <span asp-validation-for="Tcc.Tema" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tcc.UsuarioId" class="control-label"></label>
                <select asp-for="Tcc.UsuarioId" asp-items="@(new SelectList(Model.Usuarios,"Id","Nome"))" class="form-control">
                    <option value="">Selecione</option>
                </select>
                <span asp-validation-for="Tcc.UsuarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label>Orientador </label>
                    @Html.DropDownList("OrientadorId", (IEnumerable<SelectListItem>)ViewBag.ProfessorList, "Selecione", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <button type="submit" class="btn btn-outline-success"><i class="fa fa-floppy-o" aria-hidden="true"> Salvar</i></button>
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="Index" class="btn btn-outline-secondary"><i class="fa fa-list" aria-hidden="true"></i> Voltar para a lista</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
