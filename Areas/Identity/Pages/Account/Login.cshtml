@page
@model LoginModel
@inject SignInManager<SistemaDeControleDeTCCs.Models.Usuario> SignInManager

@{
    ViewData["Title"] = "Login";
}

@section Head {}

@section Styles {
    <link rel="stylesheet" href="~/css/style-login.css" />
}

@{
    if (SignInManager.IsSignedIn(User))
    {

        <div style=" text-align: center;">
            <h3>O Usuário já está Logado</h3>
            <h4>Redirecionando para a tela de incio em </h4>
            <br />
            <br />
            <br />
            <h1 id="count"></h1>
            <script>
                var i = 5;
                var myVar = setInterval(myTimer, 1000);
                function myTimer() {
                    $("#count").get()[0].textContent = i;
                    if (i <= 0) {
                        clearInterval(myVar);
                        location.replace("/");
                    } else {
                        i--;
                    }
                }
            </script>
        </div>
    }
    else
    {
        <div class="main-login">
            <aside class="left">
                <div class="banner">
                    <figure>
                        <img src="~/img/ifs-logo.png" />
                    </figure>
                </div>
            </aside>
